extends layout

block title
  | Meethub. Meet, Share, Build. Change

//-block links

block app
  .container
    .background
    .blur
    .noir
    .page.text-center
      .imagine(data-0="opacity:1", data-200="opacity: 0; margin-left: 30px")
        h4 Imagine a place...

      .spacer-100

      .where(data-0="opacity: 0; position: relative", 
             data-660="opacity:1; position:fixed; top:0; left:0; width:100%",
             data-1550="opacity: 1",
             data-1750="opacity: 0",
        )
        h3 Where you can

      .what(data-650="position:fixed; top:200px; left:0; width:100%; opacity: 0; padding-left:100%", 
            data-850="position:fixed; top:200px; left:0; width:100%; opacity: 1; padding-left:0%",
            data-1050="position:fixed; top:200px; left:0; width:100%; opacity: 0; padding-left:0%",
        )
        h4 Meet great people

      .what(data-1000="position:fixed; top:200px; left:0; width:100%; opacity: 0; padding-left:100%", 
            data-1200="position:fixed; top:200px; left:0; width:100%; opacity: 1; padding-left:0%",
            data-1400="position:fixed; top:200px; left:0; width:100%; opacity: 0; padding-left:0%",
        )
        h4 Share your knowledge

      .what(data-1350="position:fixed; top:200px; left:0; width:100%; opacity: 0; padding-left:100%", 
            data-1550="position:fixed; top:200px; left:0; width:100%; opacity: 1; padding-left:0%",
            data-1750="position:fixed; top:200px; left:0; width:100%; opacity: 0; padding-left:0%",
        )
        h4 Build something awesome

    .spacer-1400

    .page.text-center
      .form(data-1650="opacity: 0",
            data-end="opacity: 1")
        h4 This place exists
        h3 Meethub, keep in touch


block scripts
  script(type='text/javascript', src='static/js/vendor/jquery.min.js')
  script(type='text/javascript', src='static/js/vendor/skrollr.min.js')
  script(type='text/javascript', src='static/js/main.js')
